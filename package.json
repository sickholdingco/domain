{
  "name": "domain",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint && manypkg check",
    "clean": "rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.1",
    "prettier": "latest",
    "turbo": "latest",
    "lint-staged": "^12.5.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@manypkg/cli": "^0.19.2"
  },
  "packageManager": "pnpm@7.13.1",
  "lint-staged": {
    "(apps|packages)/**/*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
